<h1 class="page-header">
  <%= @user[:name] %>
  <br><small><%= @user[:email] %></span>
</h1>

<div id="adminUserControl row">
  <p>
  <a class="btn btn-default" href="<%= edit_admin_user_path(id: @user[:id]) %>">
      Edit User
    </a>
  </p>
  <hr>
</div>

<div class="row">
  <%= render partial: 'edit_permission', locals: {permission:@new_permission} %>

  <table class="table table-striped table-responive">
    <thead>
      <tr>
        <th>LMS User</th>
        <th>Role</th>
        <th>Organization</th>
        <th>Cascades</th>
        <th></th>
      </tr>
    </thead>

    <%= render(partial: 'role', collection: @user_assignments) || content_tag('tr') do %>
      <td colspan='5'>This user has not been assigned any access to Salsa</td>
    <% end %>
  </table>
</div>
