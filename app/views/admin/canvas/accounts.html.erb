<%= form_tag canvas_accounts_sync_path, class: 'form form-horizontal' do %>
  <div class="form-group">
    <%= label_tag :canvas_token, 'Canvas Admin Token' %>
    <%= text_field_tag :canvas_token, '', class: 'form-control' %>
  </div>

  <%= submit_tag 'Sync', class: 'btn btn-default' %>
<% end %>

<% if @org_meta[0] %>
  <table class="table table-responsive table-striped">
    <thead>
      <tr>
        <% @org_meta[0].attributes.each do |key, value| %>
        <th><%= key %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @org_meta.each do |meta| %>
      <tr>
        <% meta.attributes.each do |key, value| %>
        <th><%= value %></th>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-warning">
    No accounts have been synced to Salsa.
  </div>
<% end %>
