<% if @salsas.length > 0 %>
  <%= form_tag('/organizations/documents', :html => { :class => "form-vertical" } ) do |f| %>
    <%= submit_tag 'submit', { class: 'pull-right'} %>
    <div class="control-group">
      <%= label_tag :id, 'Move selected documents: ', class: "control-label" %>
      <div class="controls">
        <%= select('organization', 'id', Organization.where.not(id: params[:id]).collect { |org| [ org.slug + ' - ' + org.name, org.id ] }, include_blank: true) %></p>
      </div>

    </div>

    <ul class="nav nav-list" id="salsaDocuments">
      <% @salsas.each do |salsa| %>
        <li class="nav-header checkbox">
          <%= check_box_tag "salsa_ids[]", salsa.id, false, id: "salsa_#{salsa.id}" %>
          <% if salsa.lms_published_at %>
              <div class="pull-right info">Published <%= time_ago_in_words salsa.lms_published_at %> ago</div>
          <% end %>
          <label for="<%= "salsa_#{salsa.id}" %>">SALSA <%= salsa.id %>: <%= salsa.name %></label>


          <time datetime="<%= salsa.created_at %>">Created <%= time_ago_in_words salsa.created_at %> ago</time>

          <% if time_ago_in_words(salsa.created_at) != time_ago_in_words(salsa.updated_at) %>
            <time datetime="<%= salsa.created_at %>">Updated <%= time_ago_in_words salsa.updated_at %> ago</time>
          <% end %>

          <a class="button" data-toggle="collapse" data-parent="#salsaDocuments" href="#<%= "salsa_#{salsa.id}_wrapper" %>">
            More Information for SALSA <%= salsa.id %>
          </a>
        </li>

        <li class="row-fluid collapse" id="<%= "salsa_#{salsa.id}_wrapper" %>">
          <div class='version info'>
            Version: <%= salsa.version %>
          </div>
          
        	<% if salsa.lms_published_at %>
  	      	<div>
  	  			  Published to:
  	  			  
              <% if salsa.organization %>
    	  			  <a href="<%= salsa.organization[:lms_authentication_source] + '/courses/' + salsa.lms_course_id + '/assignments/syllabus' %>">
                  <%= salsa.organization[:lms_authentication_source] + '/courses/' + salsa.lms_course_id + '/assignments/syllabus' %>
                </a>
              <% end %>

              <% if salsa.lms_course_id %>
                (LMS Course ID:<%= salsa.lms_course_id %>)
              <% end %>
  	      	</div>
  	      <% end %>
  	    
        	<div>
            View: <%= link_to syllabus_path(id: salsa.view_id), syllabus_path(id: salsa.view_id), target: "_blank" %>
            <br>
            Edit: <%= link_to syllabus_path(id: salsa.edit_id), syllabus_path(id: salsa.edit_id), target: "_blank" %>
            
            <% if salsa.template_id %>
              <br>
              Template: <%= link_to syllabus_path(id: salsa.template_id), syllabus_path(id: salsa.template_id), target: "_blank" %>
            <% end %>
        	</div>
        </li>
      <% end %>
    </ul>
  <% end %>
  <%= paginate @salsas %>
<% else %>
  <p>
    No SALSAs have been created for this organization
  </p>
<% end %>