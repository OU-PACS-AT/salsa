<%= form_for(@organization, :html => { :class => "form-horizontal" } ) do |f| %>
<fieldset>
  <legend>Organization</legend>

  <div class="control-group">
    <%= f.label :name, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :slug, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :slug %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :parent_id, class: "control-label" %>
    <div class="controls">
      <%= f.select :parent_id, Organization.all.map { |org| [ (org[:name] ? org[:name] : '') + ' - ' + (org[:slug] ? org[:slug] : ''), org.id] }, include_blank: '-- top level organization --' %></p>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :lms_authentication_source, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :lms_authentication_source %>
    </div>
    (Canvas expects the format: <code>https://<em>instance</em>.instructure.com</code>)
  </div>

  <div class="control-group">
    <%= f.label :lms_authentication_id, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :lms_authentication_id %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :lms_authentication_key, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :lms_authentication_key %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit %>
  </div>
</fieldset>

<% end %>