<%= javascript_include_tag "https://code.jquery.com/jquery-1.12.4.js" %>
<%= javascript_include_tag "https://code.jquery.com/ui/1.12.1/jquery-ui.js" %>

<script>
(function($){
    $(function(){
        var viewport = {
            width  : $(window).width(),
            height : $(window).height()
        };

        if(viewport.width < 768) {
            $('#preview').accordion({
                header: 'h2',
                heightStyle: "content"
            });
        }
    });
}(jQuery));
</script>
