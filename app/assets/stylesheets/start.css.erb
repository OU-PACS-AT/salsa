/**Styling for Start page**/

.watermark {
    background-image: url(<%=asset_path 'welcomeBG.png' %>);
    margin: auto;
    padding-top: 2em; 
    background-color: #fff;
    text-align: left;
    vertical-align: middle;
    width: 800px;
    height: 400px;
    background-repeat: no-repeat;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 1em;
    color: #666;
    border: thin solid #334f5e;
    line-height: 1.5em;
    letter-spacing: .15em;
}
.topBarLogo {
    background-color: #a1cc3a;
    background-image: url(<%=asset_path 'topnavLogo.png' %>);
    background-repeat: no-repeat;
    height: 75px;
    width: 100%;
}
body {
    color: #C0C0C0;
    background-color: #efefef;
}
h1 {
    color: #334f5e;
}
a, a:visited  {
    color: #3366cc;
}
a:hover, a:active {
    color: #3399cc;
}
.title {
    text-align: left;
    margin: 2em;
}
.title p {
    padding-top: 1.5em;
}
.title p.small {
    padding-top: 4em;
    font-size: .75em;
    font-style: italic;
    color: #334f5e;
}