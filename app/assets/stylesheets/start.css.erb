/**Styling for Start page**/

.watermark {
    background-image: url(<%=asset_path 'welcomeBG.png' %>);
    margin: auto; 
    background-color: #fff;
    text-align: left;
    vertical-align: middle;

    width: 800px;
    height: 400px;
    background-repeat: no-repeat;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 1em;
    color: #666;
    border: thin solid #a1cc3a;
    line-height: 1.5em;
    letter-spacing: .15em;
}
.topBarLogo {
    background-color: #a1cc3a;
    background-image: url(<%=asset_path 'topnavLogo.png' %>);
    background-repeat: no-repeat;
    height: 75px;
    width: 100%;
}
body {
    color: #C0C0C0;
    background-color: #efefef;
}
.title {
    text-align: left;
    margin: 2em;
}
.title p {
    padding-top: 1.5em;
}
